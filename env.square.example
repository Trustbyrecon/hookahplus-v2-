# POS Integration Environment Configuration
# Copy this file to .env.local and fill in your actual values

# Square Configuration (Phase 1 - MVP)
SQUARE_ENV=sandbox
SQUARE_ACCESS_TOKEN=EAAA_sandbox_xxxxxxxxxxxxxxxxx
SQUARE_LOCATION_ID=XXXXXXXXXXXX

# Toast Configuration (Phase 2 - Partner API)
TOAST_BASE_URL=https://api.toasttab.com
TOAST_API_KEY=your_toast_partner_api_key_here

# Clover Configuration (Phase 3 - OAuth)
CLOVER_BASE_URL=https://api.clover.com
CLOVER_MERCHANT_ID=your_clover_merchant_id_here
CLOVER_ACCESS_TOKEN=your_clover_oauth_token_here

# Trust-Lock Security
TRUSTLOCK_SECRET=super-long-random-string-here

# Optional: Override defaults for testing
# SQUARE_ENV=production
# SQUARE_ACCESS_TOKEN=EAAA_prod_xxxxxxxxxxxxxxxxx
